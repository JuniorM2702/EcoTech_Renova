<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EcoTech_Renova</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EcoTech_Renova.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Gabarito:wght@800&family=Leckerli+One&family=Open+Sans:wght@700&family=Prompt:wght@300;600&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EcoTech_Renova</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li><a class="nav-link text-dark" asp-controller="Productos" asp-action="AgregarProducto">Vender</a></li>

                    </ul>

                    <span class="navbar-text">
                        @if (Context.Session.GetString("UsuarioCorreo") != null)
                        {
                            <!-- Menú para usuarios autenticados -->
                            <div class="dropdown">
                                <a class="btn dropdown-toggle" href="#" role="button" id="usuarioDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @Context.Session.GetString("UsuarioNombre")
                                </a>
                                <div class="dropdown-menu" aria-labelledby="usuarioDropdown">
                                    <a class="dropdown-item" href="#">Detalles de mi cuenta</a>
                                    <a class="dropdown-item" asp-action="Logout" asp-controller="Usuarios">Salir</a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <a asp-action="Register" asp-controller="Usuarios">Registrar</a>
                            <a asp-action="Login" asp-controller="Usuarios">Entrar</a>
                        }
                    </span>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - EcoTech_Renova - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
